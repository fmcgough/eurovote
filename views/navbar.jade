.navbar.navbar-transparent.navbar-fixed-top(role="navigation")
    .container-fluid
        .navbar-header
            button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Eurovision 2015
        .collapse.navbar-collapse
            ul.nav.navbar-nav
                each page, url in {'/' : 'Home', '/vote' : 'Vote', '/group' : 'Group'}
                    if navbarActive === page
                        li.active: a(href=url)=page
                    else
                        li: a(href=url)=page
            .navbar-right
                if isAuthenticated
                    button.btn.btn-link.navbar-btn
                        a.navbar-link(href="/logout") Log out
                    strong.navbar-text
                        span.glyphicon.glyphicon-user(aria-hidden="true")  #{username}
                else
                    button.btn.btn-link.navbar-btn.btn-right
                        a.navbar-link(href="/login") Log in
                    button.btn.btn-link.navbar-btn.btn-right
                        a.navbar-link(href="/signup") Sign up
