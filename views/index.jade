extends layout

block content
    .container.theme-showcase(role="main")
        p.lead Welcome to #{title}! Cast your votes <a href='/vote'>here</a>.

        p
            h2 Results
            .table-responsive
                table#results.table.table-euro.table-no-border
                    thead
                        tr
                            th Country
                            th Score
                    tbody
                        - each country in countries
                            tr
                                td
                                    span
                                        img.flag-small(src="/images/" + country.name + ".png")
                                    |#{country.name}
                                td #{country.total}
    script(src='/javascripts/update.js')
