extends layout

block content
    .col-md-offset-4.col-md-4
        .page-header 
            h1 Sign Up
        if errors
            .alert.alert-danger.alert-dismissible
                button.close(type="button" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;
                each error in errors
                    p
                        strong Error: 
                        = error
        form(method="post",action="/signup")
            .form-group
                label(for="username").sr-only.control-label Username
                input#username.form-control.input-lg(
                    type="text",name="username",placeholder="Choose a username",
                    value=username ? "#{username}" : "")
            .form-group
                label(for="email").sr-only.control-label Email address
                input#email.form-control.input-lg(
                    type="text",name="email",placeholder="Email address",
                    value=email ? "#{email}" : "")
            .form-group
                label(for="password").sr-only.control-label Password
                input#password.form-control.input-lg(
                    type="password",name="password",placeholder="Choose a password",
                    value=password ? "#{password}" : "")
            .form-group
                label(for="confirmPassword").sr-only.control-label Confirm password
                input#confirmPassword.form-control.input-lg(
                    type="password",name="confirm-password",placeholder="Re-enter password",
                    value=confirmPassword ? "#{confirmPassword}" : "")
            button.btn.btn-lg.btn-vote.btn-block Submit
